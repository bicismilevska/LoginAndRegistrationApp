<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
android:background="#565656">


    <EditText
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/username_field"
            android:layout_marginTop="150dp" android:layout_marginBottom="25dp"
            android:layout_marginEnd="54dp" android:layout_marginRight="54dp"
           android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="309dp"
            android:layout_height="46dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:ems="10"
            android:id="@+id/email_field"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="5dp"
             android:layout_marginBottom="25dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/password_field"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="25dp"
            android:layout_marginEnd="58dp" android:layout_marginRight="58dp"
          />
    <Button
            android:text="Register"
            android:layout_width="315dp"
            android:background="#FF0000"
            android:layout_height="49dp"
            android:id="@+id/registerButton"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="20dp" android:layout_marginTop="21dp"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp" android:layout_marginBottom="20dp"
           />
    <TextView
            android:text="Already have an account?"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_width="267dp"
            android:layout_height="27dp"
            android:id="@+id/textView"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="50dp" android:layout_marginTop="0dp"
            android:layout_marginEnd="79dp" android:layout_marginRight="79dp" android:layout_marginBottom="179dp"
           />
</LinearLayout>