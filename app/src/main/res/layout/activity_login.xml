<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical"
        android:background="#565656">


    <EditText
            android:layout_width="309dp"
            android:layout_height="46dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:ems="10"
            android:id="@+id/login_email"
             android:layout_marginLeft="49dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <EditText
            android:layout_width="312dp"
            android:layout_height="41dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/login_password"
            android:layout_marginLeft="49dp" android:layout_marginStart="20dp" android:layout_marginBottom="25dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <Button
            android:text="LOG IN"
            android:layout_width="312dp"
            android:background="#FF0000"
            android:layout_height="48dp"
            android:id="@+id/buttonLogin"  android:layout_marginLeft="49dp"
            android:layout_marginStart="20dp" android:layout_marginTop="21dp"
           />
</LinearLayout>